@{
    ViewData["Title"] = "Store - Search Offers";
}
@section Styles {
    <link rel="stylesheet" href="~/css/searchOffers.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
}
@section Scripts {
    <script src="~/js/searchOffers.js"></script>
}
<div class="search-offers">
    <div class="search-box">
        <div class="search-type-selection">
            <div class="search-type-group">
                <img src="~/images/car.svg" alt="">
                <div>Vehicles</div>
            </div>
            <div class="search-type-group">
                <img src="~/images/part.svg" alt="">
                <div>Parts</div>
            </div>
        </div>
        <div class="search-box-content">
            <div class="search-box-content__column">
                <div class="search-key-group">
                    <div class="search-key">
                        <input type="text" placeholder="Brand" />
                        <img class="filter__search-icon" src="~/images/search.svg" />
                    </div>
                </div>
                <div class="search-key-group">
                    <div class="search-key">
                        <input type="number" placeholder="Price from" />
                    </div>
                    <div class="search-key">
                        <input type="number" placeholder="Price to" />
                    </div>
                </div>
                <div class="search-key-group advanced-key-group hidden">
                    <div class="search-key">
                        <select id="condition-select">
                            <option value="" disabled selected>Condition</option>
                            <option value="new">Nowy</option>
                            <option value="used">Używany</option>
                        </select>
                        <img src="~/images/arrow-down-empty.svg">
                    </div>
                </div>
            </div>
            <div class="search-box-content__column">
                <div class="search-key-group">
                    <div class="search-key">
                        <input type="text" placeholder="Model" />
                        <img class="filter__search-icon" src="~/images/search.svg" />
                    </div>
                </div>
                <div class="search-key-group">
                    <div class="search-key">
                        <select id="body-select">
                            <option value="" disabled selected>Body</option>
                            <option value="sedan">Sedan</option>
                            <option value="suv">SUV</option>
                            <option value="hatchback">Hatchback</option>
                        </select>
                        <img src="~/images/arrow-down-empty.svg">
                    </div>
                    <div class="search-key">
                        <select id="type-select">
                            <option value="" disabled selected>Type</option>
                            <option value="type1">Typ 1</option>
                            <option value="type2">Typ 2</option>
                        </select>
                        <img src="~/images/arrow-down-empty.svg">
                    </div>
                </div>
                <div class="search-key-group advanced-key-group hidden">
                    <div class="search-key">
                        <select id="location-select">
                            <option value="" disabled selected>Location</option>
                            <option value="location1">Lokalizacja 1</option>
                            <option value="location2">Lokalizacja 2</option>
                        </select>
                        <img class="filter__search-icon" src="~/images/search.svg" />
                    </div>
                </div>
            </div>
            <div class="search-box-content__column">
                <div class="search-key-group advanced-key-group hidden">
                    <div class="search-key">
                        <input type="text" placeholder="Generation" />
                        <img class="filter__search-icon" src="~/images/search.svg" />
                    </div>
                </div>
                <div class="search-key-group advanced-key-group hidden">
                    <div class="search-key">
                        <input type="number" placeholder="Mileage from" />
                    </div>
                    <div class="search-key">
                        <input type="number" placeholder="Mileage to" />
                    </div>
                </div>
                <div class="search-key-group advanced-key-group hidden">
                    <div class="search-key">
                        <input type="number" placeholder="Year from" />
                    </div>
                    <div class="search-key">
                        <input type="number" placeholder="Year from" />
                    </div>
                </div>
            </div>
        </div>
        <div class="action-box">
            <button id="advanced-search">
                <img src="~/images/advanced-search-icon.svg">
                <div>Advanced search</div>
            </button>
            <button id="submit-button">
                Search
            </button>
        </div>
    </div>
</div>
