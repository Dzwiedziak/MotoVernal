<div id="login__component-wrapper" style="display: block">
    @await Component.InvokeAsync("Login", new { model = ViewBag.LoginModel });
</div>
<div id="register__component-wrapper" style="display: none">
    @await Component.InvokeAsync("Register", new { model = ViewBag.RegisterModel });
</div>

<script>
    let loginWrapper = document.querySelector('#login__component-wrapper');
    let registerWrapper = document.querySelector('#register__component-wrapper');
    const switchAuth = function(authType) {
        if (authType === "login") {
            registerWrapper.style.display = 'none';
            loginWrapper.style.display = 'block';
        }
        else if (authType === "register") {
            loginWrapper.style.display = 'none';
            registerWrapper.style.display = 'block';
        }
    };
</script>
