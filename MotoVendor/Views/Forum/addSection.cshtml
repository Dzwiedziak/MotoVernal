@model BusinessLogic.DTO.Section.AddSectionDTO;
@{
    ViewData["Title"] = "Forum - Add Section";
}
@section Styles {
    <link rel="stylesheet" href="~/css/addEditEventPostTopic.css" />
}
@section Scripts{
        <script src="~/js/editingImage.js"></script>
}
<div class="form-container">
    <form asp-action="AddEvent" method="post">
        <h2>Add new section</h2>
        <div class="form-group">
            <label for="title">Title of the section</label>
            <input type="text" asp-for="Title">
        </div>
        <div class="validate">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label for="location">Parent category</label>
            <input type="text" asp-for="Parent">
        </div>
        <div class="validate">
            <span asp-validation-for="Parent" class="text-danger"></span>
        </div>
        <div class="form-group image-upload">
            <label for="photo-select__file" class="load-image-label">Load image</label>
            <input id="photo-select__file" type="file" accept="image/*" style="display: none;">

            <div class="current-image" style="display: @(!string.IsNullOrEmpty(Model.Image?.Base64) ? "block" : "none")">
                <img id="image-preview" src="@(string.IsNullOrEmpty(Model.Image?.Base64) ? "#" : $"data:image/{Model.Image.Extension};base64,{Model.Image.Base64}")" alt="Preview of uploaded image" style="width: 200px; height: auto;">
            </div>

            <input type="hidden" id="base64" name="Image.Base64" value="@Model.Image?.Base64" />
            <input type="hidden" id="extension" name="Image.Extension" value="@Model.Image?.Extension" />
        </div>

        <div class="form-actions">
            <button type="button" class="cancel-btn" onclick="window.location.href='/Calendar/EventsList'">Cancel</button>
            <button type="submit" class="create-btn">Create</button>
        </div>
    </form>
</div>