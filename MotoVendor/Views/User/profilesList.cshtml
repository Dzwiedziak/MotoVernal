@model List<BusinessLogic.DTO.User.GetUserDTO>
@{
    ViewData["Title"] = "User - Profiles List";
}
@section Styles {
    <link rel="stylesheet" href="~/css/profilesList.css" />
}
<section>
    <div class="up-section">
        <div class="nav-tree">
            <label for="place">App</label>
        </div>
        <div class="sort">
            <label for="sort_by">Sort By</label>
            <select id="type">
                <option value="alpabetical_asc">Alpabetical ACS</option>
                <option value="alphabetical_desc">Alpabetical DESC</option>
            </select>
        </div>
    </div>
    <div class="second-section">
        <div class="search-bar">
            <img src="~/images/peel.svg" alt="peel" class="peel-icon" id="peel-icon">
            <input type="text" id="search" placeholder="Search">
        </div>
    </div>
</section>
<div class="main-cnt">
    <div class="side-section">
        <div class="filter-by">
            <label>Filter by</label>
            <button class="clear">
                <span>X Clear All</span>
            </button>
        </div>
        <div class="location-group">
            <label for="status">Type</label>
            <div class="status-group">
                <label class="status">Observed</label>
                <input type="checkbox" id="status1" name="owner" value="owner">
            </div>
            <div class="status-group">
                <label class="status">Admin</label>
                <input type="checkbox" id="status2" name="interested" value="interested">
            </div>
        </div>
    </div>
    <ol>
        <li>
            <span class="id">1.</span>
            <span class="nickname">RoyBig</span>
            <button class="profile">
                <img src="~/images/auto-z-usa-autobaza.jpg" alt="profil-img" class="profil-img">
            </button>
            <button class="observed">
                <img src="~/images/star.png" alt="star-img" class="star-img">
            </button>
        </li>
        <li class="admin">
            <span class="id">1.</span>
            <span class="nickname">Dzwiedziu</span>
            <button class="profile">
                <img src="~/images/profilowe.jpg" alt="profil-img" class="profil-img">
            </button>
            <button class="observed">
                <img src="~/images/star (1).png" alt="star-img" class="star-img">
            </button>
        </li>
        @foreach(var user in Model)
        {
            bool isAdmin = user.Roles.Contains("Admin");
            <li class="@(isAdmin ? "admin" : "")">
                <span class="nickname">@user.UserName</span>
                <button class="profile" onclick="window.location.href='/user/ProfileView?id=@user.Id'">
                    <img src="@user.ProfileImage" alt="profil-img" class="profil-img">
                </button>

                <button class="observed">
                    <img src="~/images/star.png" alt="star-img" class="star-img">
                </button>
            </li>
        }
    </ol>
</div>
