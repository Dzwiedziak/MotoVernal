@model DB.Entities.Ban;
@{
    ViewData["Title"] = "User - Ban Details";
}
@section Styles {
    <link rel="stylesheet" href="~/css/banDetails.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
}
<div class="main-cnt">
    <div class="info-container">
        <div class="up-info">
            <div class="profile-info">
                <button class="profile" onclick="window.location.href='/user/ProfileView?id=@Model.Banned.Id'">
                    @if (Model.Banned.ProfileImage != null && !string.IsNullOrEmpty(Model.Banned.ProfileImage.Base64) && !string.IsNullOrEmpty(Model.Banned.ProfileImage.Extension))
                    {
                        <img class="profil-img" src="data:image/@Model.Banned.ProfileImage.Extension;base64,@Model.Banned.ProfileImage.Base64" />
                    }
                    else
                    {
                        <img src="~/images/user-icon.svg" id="profil-img" alt="profil" class="profil-img">
                    }
                </button>
                <span class="nickname">@Model.Banned.UserName</span>
            </div>
            <div class="classic">was banned by the</div>
            <div class="profile-info">
                <button class="profile" onclick="window.location.href='/user/ProfileView?id=@Model.Banner.Id'">
                    @if (Model.Banner.ProfileImage != null && !string.IsNullOrEmpty(Model.Banner.ProfileImage.Base64) && !string.IsNullOrEmpty(Model.Banner.ProfileImage.Extension))
                    {
                        <img class="profil-img" src="data:image/@Model.Banner.ProfileImage.Extension;base64,@Model.Banner.ProfileImage.Base64" />
                    }
                    else
                    {
                        <img src="~/images/user-icon.svg" id="profil-img" alt="profil" class="profil-img">
                    }
                </button>
                <span class="nickname">@Model.Banner.UserName</span>
            </div>
        </div>
        <div class="main-info">
            <div class="reason">
            Reason of blocking:
                <span>@Model.Reason</span>
            </div>
            <div class="rest-group">
                @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image.Base64) && !string.IsNullOrEmpty(Model.Image.Extension))
                {
                    <img class="reason-img" src="data:image/@Model.Image.Extension;base64,@Model.Image.Base64" />
                }
                else
                {
                    
                }
            </div>
        </div>
        <div class="event-contents">
            <div class="event-content">
                <label>Creation time of blocked</label>
                <label class="hour">@Model.CreationTime</label>
                <img src="~/images/calendar.png" alt="calendar" class="calendar-image" id="calendar-image">
            </div>
            <div class="event-content">
                <label>Expiration time of blocked</label>
                <label class="hour">@Model.ExpirationTime</label>
                <img src="~/images/calendar.png" alt="calendar" class="calendar-image" id="calendar-image">
            </div>
        </div>
        <div class="details-action">
            <button class="go-back" onclick="window.history.back()">
                <span>Take me back</span>
            </button>
            @if (User.IsInRole("Admin") && ViewBag.isActive)
            {
                <button class="show-more" onclick="window.location.href='/user/RemoveBan?id=@Model.Banned.Id'">
                    <span>Remove Ban</span>
                </button>
            }
        </div>
    </div>
</div>