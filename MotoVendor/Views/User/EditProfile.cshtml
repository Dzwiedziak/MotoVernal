@model BusinessLogic.DTO.User.GetUserDTO;
@{
    ViewData["Title"] = "App - Edit Profile";
}
@section Styles {
    <link rel="stylesheet" href="~/css/editProfile.css" />
}
@section Scripts {
    <script src="~/js/editProfile.js"></script>
}
<main>
    <div class="form-container">
        <form>
            <div class="profile-header">
                <div class="profil-nickname">
                    <label>@Model.UserName</label>
                </div>
                <div class="profile-img-upload">
                    <img src="~/images/profilowe.jpg" id="profil-img" alt="profil" class="profil-img">
                    <input type="file" id="file-upload" style="display: none;" accept="image/*" />
                    <div class="hover-text">Click to change</div>
                </div>
            </div>
            <div class="profile-info">
                <div class="info-item">
                    <label for="gender">Gender:</label>
                    <select    oninput="@Model.Gender">
                        <option>Women</option>
                        <option>Man</option>
                    </select>
                </div>
                <div class="info-item">
                    <label for="age">Age:</label>
                    <input type="number" id="age" value="@Model.Age" />
                </div>
                <div class="info-item">
                    <label for="description">Description:</label>
                    <textarea id="description" cols="50">@Model.Description</textarea>
                </div>
            </div>
            <div class="form-actions">
                <button type="button" class="cancel-btn">Cancel</button>
                <button type="submit" class="create-btn">Save changes</button>
            </div>
        </form>
    </div>
</main>
